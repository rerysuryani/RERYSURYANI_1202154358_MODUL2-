<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.web.rery.rerysuryani_1202154358_modul2.Original">

    <ImageView
        android:id="@+id/imageoriginal"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/original"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/menuavailable"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageoriginal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Tersedia Original :"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="247dp" />

    <TextView
        android:id="@+id/jenisori"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/menuavailable"
        android:layout_alignStart="@+id/menuavailable"
        android:layout_below="@+id/menuavailable"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="21dp"
        android:text="Sunda, Minang, Korea"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/harga"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/menuavailable"
        android:layout_alignRight="@+id/menuavailable"
        android:layout_centerVertical="true"
        android:text="Harga : 20.000"
        android:layout_centerHorizontal="true"
        android:textSize="24sp" />
</RelativeLayout>
